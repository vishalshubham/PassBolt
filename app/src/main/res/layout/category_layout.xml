<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/id_social_fac"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_social_fac"
            />
        <ImageButton
            android:id="@+id/id_social_pin"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_social_pin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/id_social_twi"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_social_twi"/>
        <ImageButton
            android:id="@+id/id_social_ven"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_social_ven"
            />
    </LinearLayout>
</LinearLayout>