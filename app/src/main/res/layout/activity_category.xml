<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageButton
                android:id="@+id/id_social_fac"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_social_fac"
                android:layout_gravity="center"
                />
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"></View>
            <ImageButton
                android:id="@+id/id_social_pin"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_social_pin"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageButton
                android:id="@+id/id_social_twi"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_social_twi"/>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"></View>
            <ImageButton
                android:id="@+id/id_social_ven"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_social_ven"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="9dp"
        android:paddingRight="9dp">
        <ImageButton
            android:id="@+id/id_category_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_social_ven"
            />
    </LinearLayout>
</LinearLayout>